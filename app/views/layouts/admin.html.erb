<!DOCTYPE html>
  <html>
  <head>
    <title>The Unicorn Gazette</title>
    <%= stylesheet_link_tag "admin" %>
    <link href='http://fonts.googleapis.com/css?family=Cabin|Lobster|Quattrocento+Sans' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "admin" %>
    <%= csrf_meta_tag %>
    <%= javascript_tag("var AUTH_TOKEN = #{form_authenticity_token.inspect};") if protect_against_forgery? %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>

    <% # Header, copyed from http://twitter.github.com/bootstrap/examples/fluid.html %>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "The Wasatch Gecko | Admin", admin_root_path, class: "brand" %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><%= link_to "Home", admin_posts_path %></li>
              <li><%= link_to "Posts", admin_posts_path %></li>
              <li><%= link_to "Staff", admin_authors_path %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row-fluid span12">

    <div id="content" class="span12">
    	<% if flash[:notice] || flash[:alert] %>
    	<div id="flash">
    		<% if flash[:notice] %>
    			<div id="notice"><%= flash[:notice] %></div>
    		<% end %>
    		<% if flash[:alert] %>
    			<div id="alert"><%= flash[:alert] %></div>
    		<% end %>
    	</div>
    	<% end %>

    	<%= yield %>
    	
    </div>

      </div>
    </div>

  </body>
</html>
