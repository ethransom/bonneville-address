<% cache("post-#{params[:id]}") do %>
<article class="post">
	<h1 class="post"><%= @post.title %></h1>

	<div id="post">
	<%= render_markdown @post.content %>
	<p class="info">By: <span class="name"><%= @post.author.name %></span> | <%= @post.author.position %></p>

	</div>

	<%= link_to "Back to Posts", posts_path %>
</article>
<% end %>