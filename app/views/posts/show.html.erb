<% content_for :title do %>
  <%= @post.title %>
<% end %>

<article class="post">
	<h1><%= @post.title %></h1>

  <div class="info">
    <p>By <em><%= link_to @post.author.name, @post.author %></em>, <%= @post.author.position %></p>
    <p class="date"><%= @post.publish_date %></p>
  </div>
  
  <div class="social">
    <div class="fb-like" data-href="<%= post_url @post %>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>

    <% content_for :extra_scripts do %>
      <div id="fb-root"></div>
      <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>
    <% end %>

    <div class="g-plusone" data-size="medium"></div>

    <% content_for :extra_scripts do %>
      <script type="text/javascript">
        (function() {
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
        })();
      </script>
    <% end %>
  </div>

	<div id="post">
    <div class="content">
      <%= @post.content_html %>
    </div>

    <div class="more">
      <p>More in <%= link_to @post.section.name, @post.section %></p>
      <p>More from <%= link_to @post.author.name, @post.author %></p>
    </div>

    <% # comments, provided through FB %>
    <div class="comments">
      <div class="fb-comments" data-href="<%= post_url @post %>" data-width="860" data-num-posts="20"></div>
    </div>
	</div>
</article>
